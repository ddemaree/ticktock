<%- @page_title = "Add events" -%>
<% @event_row = capture do %>
<%= render :partial => 'new', :locals => {:index => "\#{index}"} %>
<% end %>
<%= javascript_tag %{var eventRow = new Template("#{escape_javascript(@event_row)}")} %>

<div class="hd calendar-hd">
	<h1>Add new events to your log</h1>
</div>

<table class="frame">
<tr>
	<td class="seven">
	<% form_for @event, :html => {:class => "bd"} do |f| %>
		<div id="errorContainer" style="display:none">
			<p>We're sorry, but we couldn't add this event to your log. Please correct these errors and try again:</p>
			<ul></ul>
		</div>
		
		<div class="event_body">
			<h4><%= f.label :body, "What did you do?" %></h4>
			<p><%= f.text_area :body, :cols => 60, :rows => 5 %></p>
		</div>
		
		<p class="instructions">
			<strong>Dates</strong> can be specified in <code>MM/DD/YYYY</code> format, e.g. <code>3/9/2009</code>. <strong>Durations</strong> can be specified in hours and minutes, e.g. <code>3:30</code> for 3 hours and 30 minutes. <strong>Tags</strong> are denoted by a pound sign (<code>#</code>), e.g. <code>#workout</code>. <strong>Projects</strong> are denoted by an <code>@</code>-sign, e.g. <code>@marathon</code>.
		</p>
		
		<p class="form-action">
			<button type="submit"><span>Add to log</span></button>
		</p>
		
		<hr class="clear">		
	<% end %>
	
	<div id="recent-events-2">
	<ul class="events-list show-dates">
		<%= render :partial => "list_item", :as => :event, :collection => current_account.events.recent(10), :locals => {:show_date => true} %>
	</ul>
	</div>
	<script type="text/javascript" charset="utf-8">
		new HoverObserver('recent-events-2')
		Event.observe(window, 'load', function(){
			$$('.event a.edit').each(function(link){
				new InlineEventEditor(link)
			})
		})
	</script>	
	</td>
	
	<td class="gutter">&nbsp;</td>
	
	<td class="three sidebar">
		<ul class="actions">
			<h3>More options</h3>
			<li><%= link_to "Import from CSV file&hellip;", new_event_import_path, :class => "action import" %></li>
		</ul>
	</td>
</tr>
</table>

